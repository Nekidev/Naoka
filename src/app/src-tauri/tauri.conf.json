{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devPath": "http://localhost:3000/app/library/",
        "distDir": "../renderer/out"
    },
    "package": {
        "productName": "Naoka",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "notification": {
                "all": true
            },
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "https://graphql.anilist.co/*",
                    "https://api.myanimelist.net/v2/*",
                    "https://api.jikan.moe/*",
                    "https://*.nyeki.dev/*"
                ]
            },
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true,
                "setSize": true,
                "setTitle": true
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Entertainment",
            "copyright": "Copyright Â© 2023 Nyeki",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "dev.nyeki.naoka",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "A desktop app for anime and manga tracking.",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "nsis": {
                    "installerIcon": "icons/icon.ico"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "title": "Naoka",
                "height": 600,
                "minHeight": 600,
                "width": 1000,
                "minWidth": 1000,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "center": true,
                "url": "/app/library/"
            }
        ]
    }
}
