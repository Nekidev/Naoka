{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devPath": "http://localhost:3000/app/library/",
        "distDir": "../renderer/out"
    },
    "package": {
        "productName": "Naoka",
        "version": "0.1.0"
    },
    "plugins": {
        "http": {
            "scope": [
                "https://graphql.anilist.co/*",
                "https://api.myanimelist.net/v2/*",
                "https://api.jikan.moe/*"
            ]
        },
        "shell": {
            "open": true
        },
        "updater": {
            "endpoints": []
        }
    },
    "tauri": {
        "bundle": {
            "active": true,
            "category": "Entertainment",
            "copyright": "Copyright Â© 2023 Nyeki",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "dev.nyeki.naoka",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "A desktop app for anime and manga tracking.",
            "targets": "all",
            "updater": {
                "active": false
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "nsis": {
                    "installerIcon": "icons/icon.ico"
                },
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "center": true,
                "decorations": false,
                "fullscreen": false,
                "height": 600,
                "minHeight": 600,
                "minWidth": 1000,
                "resizable": true,
                "title": "Naoka",
                "transparent": true,
                "url": "/app/library/",
                "width": 1000
            }
        ]
    }
}